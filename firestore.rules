rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Menu items - read by everyone, write by authenticated users
    match /menu/{menuItem} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Categories - read by everyone, write by authenticated users
    match /categories/{category} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Orders - read/write by everyone (for customer ordering)
    match /orders/{order} {
      allow read, write: if true;
    }
    
    // Announcements - read by everyone, write by authenticated users
    match /announcements/{announcement} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // For development: allow all operations
    // In production, you should restrict this further
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
